<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @actor.name %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @actor.bio %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @actor.genre.name %>
</p>

	<h3>Movies starring this Actor:</h3>
<% if @actor.movies.presence %>
	<ul>
		<% @actor.movies.each do |movie| %>
			<li><%= link_to movie.name, movie.website %></li>
		<% end %>
	</ul>
<% else %>
	<h4>No movies yet!</h4>	
<% end %>

<%= link_to 'Edit', edit_actor_path(@actor) %> |
<%= link_to 'Back', actors_path %>
