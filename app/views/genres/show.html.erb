<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @genre.name %>
</p>


	<h3>Movies in this Genre:</h3>
<% if @genre.movies.presence %>
	<ul>
		<% @genre.movies.each do |movie| %>
			<li><%= link_to movie.name, movie.website %></li>
		<% end %>
	</ul>
<% else %>
	<h4>No movies yet!</h4>	
<% end %>

<%= link_to 'Edit', edit_genre_path(@genre) %> |
<%= link_to 'Back', genres_path %>
 